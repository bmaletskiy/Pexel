<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pexel.MainPage"
             x:Name="Root"
             Title="Pexel — Електронна Таблиця"
             BackgroundColor="#1e1e1e">

    <Grid RowDefinitions="Auto, *, Auto" Padding="10">
        <!-- Панель кнопок -->
        <HorizontalStackLayout Grid.Row="0" Spacing="8" HorizontalOptions="Center">
            <Button Text="➕ Додати рядок" Clicked="AddRow_Clicked" Style="{StaticResource ToolbarButton}" />
            <Button Text="➕ Додати стовпчик" Clicked="AddColumn_Clicked" Style="{StaticResource ToolbarButton}" />
            <Button Text="Видалити рядок" Clicked="DeleteRow_Clicked" Style="{StaticResource ToolbarButton}"/>
            <Button Text="Видалити стовпчик" Clicked="DeleteColumn_Clicked" Style="{StaticResource ToolbarButton}"/>
            <Button Text="💾 Зберегти" Clicked="OnSaveClicked" Style="{StaticResource ToolbarButton}" />
            <Button Text="📂 Завантажити" Clicked="OnLoadClicked" Style="{StaticResource ToolbarButton}" />
            <Button Text="ℹ️ Про програму" Clicked="OnAboutClicked" Style="{StaticResource ToolbarButton}" />
            <Button Text="🚪 Вийти" Clicked="OnExitClicked" Style="{StaticResource ToolbarButton}" />
        </HorizontalStackLayout>

        <!-- Таблиця -->
        <ScrollView Grid.Row="1" Orientation="Both">
            <Grid x:Name="dataGrid"
                  BackgroundColor="#252526"
                  Padding="5"
                  RowSpacing="1"
                  ColumnSpacing="1" />
        </ScrollView>
    </Grid>

    <ContentPage.Resources>
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#007ACC" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
    </ContentPage.Resources>
</ContentPage>
