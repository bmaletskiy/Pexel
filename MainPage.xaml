<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pexel.MainPage">

    <Grid RowDefinitions="Auto, *, Auto">
        <HorizontalStackLayout Grid.Row="0" Margin="10">
            <Button Text="Додати рядок" Command="{Binding AddRowCommand}" />
            <Button Text="Додати стовпчик" Command="{Binding AddColumnCommand}" />
        </HorizontalStackLayout>
        
        <CollectionView Grid.Row="1" ItemsSource="{Binding CurrentSheet.Cells}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <CollectionView ItemsSource="{Binding .}" ItemsLayout="HorizontalList">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="LightGray" StrokeThickness="1" WidthRequest="100" HeightRequest="40">
                                    <Entry Text="{Binding Expression}" Margin="5" VerticalOptions="Center" HorizontalOptions="Center"/>                                       
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>                                                                                                           

        <HorizontalStackLayout Grid.Row="2" Margin="10">
            <Label Text="Формула:" VerticalOptions="Center"/>
            <Entry Placeholder="=A1+B2" HorizontalOptions="FillAndExpand"/>
            <Switch IsToggled="false"/>
            <Label Text="Значення" VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </Grid>

</ContentPage>